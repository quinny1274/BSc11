<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css'/>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <!-- Geolocation and Leaflet JS (approved in Discussion Boards -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

</head>
<body>
    <h1><%= title %></h1>
    <div>
        <form action="/create/add" method="POST" enctype="multipart/form-data">
            <input type="hidden" id="userID" name="userID">

            <label for="name">Name (Leave blank if unknown):</label>
            <input type="text" id="name" name="name">
            <br>
            <br>
<!--            <label for="enableSuggestions">Enable User Suggestions:</label>-->
            <input type="hidden" id="enableSuggestions" name="enableSuggestions" >
            <br>
            <br>
            <label for="date">Date:</label>
            <input type="datetime-local" id="date" name="date" required>
            <br>
            <br>
            <div id="map"></div>
            <label for="location">location:</label>
            <input type="text" id="location" name="location" required>
            <br>
            <br>
            <label for="description">description:</label>
            <input type="text" id="description" name="description" required>
            <br>
            <br>
            <label for="size">size:</label>
            <input type="number" id="size" name="size" required>
            <br>
            <br>
            <label for="flowers">flowers:</label>
            <input type="checkbox" id="flowers" name="flowers" >
            <br>
            <br>
            <label for="leaves">leaves:</label>
            <input type="checkbox" id="leaves" name="leaves" >
            <br>
            <br>
            <label for="fruit">fruit:</label>
            <input type="checkbox" id="fruit" name="fruit" >
            <br>
            <br>
            <label for="sunExposure">Sun Exposure:</label>
            <br>
            <br>
            <label for="fullSun">Full Sun</label>
            <input type="radio" id="fullSun" name="sunExposure" value="Full Sun" required>
            <br>
            <br>
            <label for="partialShade">Partial Shade</label>
            <input type="radio" id="partialShade" name="sunExposure" value="Partial Shade" required>
            <br>
            <br>
            <label for="fullShade">Full Shade</label>
            <input type="radio" id="fullShade" name="sunExposure" value="Full Shade" required>
            <br>
            <br>
            <label for="flowerColour">Flower Colour:</label>
            <input type="text" id="flowerColour" name="flowerColour" required>
            <br>
            <br>
            <label for="myImage">Choose an image</label><br><br>
            <input type="file" id="myImage" name="myImg" accept="image/*" required>
            <br>
            <br>
            <button type="Submit">Submit</button>
        </form>
    </div>
</body>
<script src="/javascripts/Geolocation.js"></script>
</html>

<script>
    const userIDInput = document.getElementById('userID');
    const userID = localStorage.getItem('userID');
    userIDInput.value = userID;
</script>
